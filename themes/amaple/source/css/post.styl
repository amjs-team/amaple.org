@import "_partial/highlight"

title-margin = 20px;

anto-prefix(selector, content)
	{selector}: content
	-moz-{selector}: content
	-webkit-{selector}: content
	-o-{selector}: content

// Markdown
.post
	h1
		color: #ed5626
		margin-bottom: title-margin
	h2, h3, h4, h5, h6
		margin: 30px 0 title-margin 0
		color: #ff8e92
	code
		background: #fff9ef
		color: #ffb949
		padding: 0 4px
		border-radius: 4px
		margin: 0 2px
	em a
		border-bottom: dashed 1px #78808a
	a
		anto-prefix('transition', border .3s\, color .3s)
		color: #78808a
		border-bottom: dashed 1px #78808a
		&:hover
			border-bottom: dashed 1px #ffb949
			color: #ffb949
	strong
		font-weight: bold
	ul, ol
		margin: 15px 0 15px 28px
		ul
			list-style-type: circle
			margin-left: 40px
		ol
			list-style-type: circle
			margin-left: 40px
	ul
		list-style-type: disc
	ol
		list-style-type: decimal
	blockquote
		position: relative
		margin: 1em 0
		padding: 8px 12px
		background: #f9f9f9
		border-left: solid 4px #ffe0a2
		&::before
			content: "Notice"
			color: #ed5626
			font-size: 16px
			font-weight: bold
	hr
		margin: 40px 0
		height: 1px
		background: $grey
		border: none
	img 
		width: 100%
	// Video

	.video-container
		position: relative
		padding-top: 56.25%
		height: 0
		overflow: hidden

		iframe, object, embed
			position: absolute
			top: 0
			left: 0
			width: 100%
			height: 100%
			margin-top: 0
		
	


	// Table

	& > table
		width: 100%
		border-collapse: collapse
		table-layout: fixed

		th, td
			padding: 0 2em
			height: 2em
		

		th
			border-bottom: 2px solid $gray-300
		
		

		tbody tr
			height: 20px
			border-bottom: 1px solid $grey

			&:nth-child(odd)
				background: $grey-250