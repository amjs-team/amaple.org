<module :title="<%=page.title%>">
	<template>
		<%-page.content %>
		<div id="page-nav">
			<a class="nav prev" href="#">
				<img src="/images/arrow.png">
				<span class="title-color">prev</span>
			</a>
			<a class="title-color nav next" href="#">
				<span class="title-color">next</span>
				<img src="/images/arrow.png">
			</a>
		</div>
	</template>
	<script>
		new am.Module ( {
			init: function ( event ) {
				event.on ( "deliverToc", function ( obj ) {
					obj.list = <%-tocToArray ( toc ( page.content, { class: "am", list_number: false } ) ) %>;
				} );
			}
		} );
	</script>

	<style scoped>
		#page-nav {
			margin-top: 60px;
		}
		.nav {
			font-size: 16px;
		}
		.nav img {
			width: 18px;
			margin: 0 5px;
			vertical-align: middle;
		}
		.prev {
			float: left;
		}
		.prev img {
			transform: rotate(180deg);
			-ms-transform: rotate(180deg);
			-moz-transform: rotate(180deg);
			-webkit-transform: rotate(180deg);;
			-o-transform: rotate(180deg);
		}
		.next {
			float: right;
		}
	</style>
</module>