<module :title="<%=page.title%> Â· Amaple">
	<template>
		<%-page.content %>
		<div id="page-nav">
			<a class="nav prev" href="{{ prev.path }}" :if="prev.title">
				<img src="/images/arrow.png">
				<span class="title-color">{{ prev.title }}</span>
			</a>
			<a class="title-color nav next" href="{{ next.path }}" :if="next.title">
				<span class="title-color">{{ next.title }}</span>
				<img src="/images/arrow.png">
			</a>
		</div>
	</template>
	<script>
		new am.Module ( {
			init: function ( event ) {
				console.log ( 111 );
				event.on ( "deliverToc", function ( obj ) {
					obj.list = <%-tocToArray ( toc ( page.content, { class: "am", list_number: false } ) ) %>;
				} );

				return {
					prev: {
						title: "<%-(page.prev || {}).title %>",
						path: "<%-tranformLink ( (page.prev || {}).path || '', config.permalink ) %>"
					},
					next: {
						title: "<%-(page.next || {}).title %>",
						path: "<%-tranformLink ( (page.next || {}).path || '', config.permalink ) %>"
					}
				};
			}
		} );
	</script>

	<style scoped>
		#page-nav {
			margin-top: 60px;
		}
		.nav {
			font-size: 16px;
		}
		.nav img {
			width: 18px;
			margin: 0 5px;
			vertical-align: middle;
		}
		.prev {
			float: left;
		}
		.prev img {
			transform: rotate(180deg);
			-ms-transform: rotate(180deg);
			-moz-transform: rotate(180deg);
			-webkit-transform: rotate(180deg);;
			-o-transform: rotate(180deg);
		}
		.next {
			float: right;
		}
	</style>
</module>